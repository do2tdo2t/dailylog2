<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.rc.dailylog2.domain.login.LoginMapper" >

    <select id="checkLogin" parameterType="hashmap" resultType="java.lang.String">
        select
        nvl(max('Y'),'N') existyn
        from dual
        where exists (select 1 from t_user
                        where userid = '#{userid}'
                        and encpassword = '#{password}'
                        and userstatecode = 1)
    </select>

</mapper>