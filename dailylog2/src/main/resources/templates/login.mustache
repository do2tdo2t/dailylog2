{{>layout/header}}

<div class="w3-card-4" style="width:500px; margin:auto; padding:30px; position:relative; top:15%">
    <form action="/api/login" onsubmit="return checkIdPassword();" method="post" accept-charset="UTF-8" >
        <img src="/static/img/logo2.png" style="width:300px; position:relative; left:15%">
        <p>
        <label>아이디</label>
        <input class="w3-input" type="text" name="userid" id="dailylog2_userid">
        </p>
        <p>
            <span class="w3-text-red" id="msg-id" style="display:none">사번을 입력하세요.</span>
        </p>
        <p>
        <label>비밀번호</label>
        <input class="w3-input" type="password" name="password"  id="dailylog2_password">
        </p>
        <p>
            <span class="w3-text-red" id="msg-pw" style="display:none">비밀번호를 입력하세요.</span>
        </p>
        <p>
            <span class="w3-text-red" id="msg-login" style="display:none">아이디와 비밀번호가 일치하지 않습니다.</span>
        </p>
        <input class="w3-input w3-red" type="submit" value="로그인">
    </form>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
<!-- google material design-->
<script src="https://unpkg.com/material-components-web@v4.0.0/dist/material-components-web.min.js"></script>

<!-- datepickers -->
