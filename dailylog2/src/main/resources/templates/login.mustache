<script src="/static/js/datepicker/bootstrap-datepicker.ko.js"></script>
<script src="/static/js/datepicker/datepicker-event.js"></script>
<script src="/static/js/datepicker/date-format.js"></script>
<script src="/static/js/login.js" ></script>

</body>
</html>