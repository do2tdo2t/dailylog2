<!-- Page content -->
<div class="w3-main" style="margin-left:320px; height:100%; ">
    <i class="fa fa-bars w3-button w3-white w3-hide-large w3-xlarge w3-margin-left w3-margin-top" onclick="w3_open()"></i>
    <a href="javascript:void(0)" class="w3-hide-large w3-red w3-button w3-right w3-margin-top w3-margin-right" onclick="whenClickWriteBtn()"><i class="fa fa-pencil"></i></a>

    <div id="topContainer" class="w3-container" style="min-height: 145px;">
        <br>
        <h5 class="w3-opacity breadcrumb">업무일지 > 팀</h5>
        <h4><i class="fa fa-clock-o"></i><input type="text" id="date-picker1" class="date-picker datepicker-style1 w3-light-grey" value=""></h4>
        <a class="w3-button w3-light-grey" href="/dailylog2/team/month"  onclick="changeMonthCalendar()" >월간달력</a>
        <a class="w3-button w3-light-grey" href="/dailylog2/team/week" >주간달력</a>
        <select class="w3-button w3-light-white w3-border" name="deptcode" id="depetcode-select" onchange="whenChageDeptcode()">
            <option value="0001" name="정보기획팀">정보기획팀</option>
            <option value="0002" name="혈액정보팀">혈액정보팀</option>
            <option value="0003" name="경영정보팀">경영정보팀</option>
            <option value="0004" name="의료정보팀">의료정보팀</option>
        </select>
        <a class="w3-button w3-light-grey" href="javascript:void(0)" onclick="beforeMonth()"><i class="w3-margin-right fa fa-arrow-left"></i>이전</a>
        <a class="w3-button w3-light-grey" href="javascript:void(0)" onclick="nextMonth()">다음<i class="w3-margin-left fa fa-arrow-right"></i></a>
        <a class="w3-button w3-white w3-border w3-border-red mode" href="javascript:void(0)" onclick="changeWeekCalendarListMode()" style="display:none" >리스트형</a>
        <a class="w3-button w3-white w3-border w3-border-red mode" href="javascript:void(0)" onclick="changeWeekCalendarCardMode()" style="display:none">카드형</a>
        <a class= "w3-button" href = "javascript:void(0)" id="yyyymm">
            <span id = "yyyy"></span>년 &nbsp; &nbsp;<span id = "mm"></span>월
        </a>
        <!-- <hr style="margin-bottom: 0px; padding-bottom: 0px;" > -->
    </div>
    <!-- 달력 타입-->
    <input id="calendarType1" value='team' hidden>
    <input id="calendarType2" value='month' hidden>

    <!-- calendar-->
    <div id ="calendar" class="w3-container common-calendar">
    </div>

</div>

